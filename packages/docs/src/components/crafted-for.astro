---
const WORDS = ['Performance', 'SSR Compat', 'Reliability', 'Ease to use']
const IDEAS = [...WORDS, ...WORDS, ...WORDS]
---

<section class="not-content flex items-center justify-center gap-6 h-[50vh] mb-9">
  <h2 class="text-2xl sm:text-4xl md:text-6xl lg:text-7xl xl:text-8xl">Crafted for</h2>
  <div class="h-[50px] md:h-[100px] xl:h-[150px] overflow-hidden">
    <div class="ideas">
      {IDEAS.map((idea) => (
        <h2 class="idea h-[50px] leading-[50px] md:leading-[100px] md:h-[100px] xl:h-[150px] xl:leading-[150px] text-2xl sm:text-4xl md:text-6xl lg:text-7xl xl:text-8xl sm:min-w-[230px] sm:text-center bg-clip-text text-transparent bg-gradient-to-r from-accent-600 to-accent-400 dark:from-accent-200 dark:to-accent-400">
          {idea}
        </h2>
      ))}
    </div>
  </div>
</section>

<style>
  .ideas {
    animation: scroll 30s linear infinite;
  }
  
  @keyframes scroll {
    to {
      transform: translateY(-100%);
    }
  }
</style>
